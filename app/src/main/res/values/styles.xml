<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="AppTheme.ProgressBarAccent">
        <item name="colorAccent">@color/primaryDarkColor</item> <!-- Whatever color you want-->
    </style>

    <style name="ContentTextViewAppearance">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily"> serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="LabelTextViewAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:drawableRight">@android:drawable/arrow_down_float</item>
    </style>

